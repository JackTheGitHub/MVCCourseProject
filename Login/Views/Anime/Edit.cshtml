@model ASPMVCProject.Models.AnimeViewModel
@using ASPMVCProject.Helpers
@using ASPMVCProject.Models

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Animes</h2>

<div class="table-actions">
    @if (LoginUserSession.Current.IsAdministrator)
    {
        @Html.ActionLink("Add New Anime", "EditAnime", "Anime", null, new { @class = "btn btn-primary btn-sm" })
    }


</div>

<table class="table table-striped">

    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Category</th>
            <th>Rating</th>
            <th></th>
            <th></th>
        </tr>

    </thead>

    <tbody>

        @foreach (AnimesViewModel anime in Model.animeList)
        {
            <tr>
                <td>@anime.ID</td>
                <td>@anime.Name</td>
                <td>@anime.Category.Name</td>
                <td>@anime.Rating / 10</td>
                @if (LoginUserSession.Current.IsAdministrator)
                {
                    <td>@Html.ActionLink("Edit", "EditAnime", "Anime", new { id = anime.ID }, new { @class = "btn btn-primary btn-sm" })</td>
                    <td>@Html.ActionLink("Delete", "Delete", "Anime", new { id = anime.ID }, new { onclick = "return confirm('Are you sure you want to delete this anime?');", @class = "btn btn-danger btn-sm" })</td>
                }

            </tr>
        }

    </tbody>

</table>

